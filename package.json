{
  "name": "use-last-call",
  "description": "A custom React Hook that executes a callback when a user is exiting your app- in both desktop and mobile browsers.",
  "license": "MIT",
  "version": "0.1.0",
  "main": "dist/useLastCall.js",
  "types": "dist/useLastCall.d.ts",
  "scripts": {
    "build:demo": "react-scripts build",
    "deploy": "npm run build:demo && gh-pages -d build",
    "eject": "react-scripts eject",
    "lint": "eslint --max-warnings 0 src/**/*.ts{,x}",
    "lint:formatting": "prettier -uc '{,src/}*'",
    "prepare": "tsc -p tsconfig.dist.json",
    "start": "react-scripts start",
    "test": "react-scripts test",
    "test:coverage": "react-scripts test --coverage --watchAll=false",
    "test:types": "tsc --watch"
  },
  "author": "jules",
  "repository": "julesferreira/use-last-call",
  "homepage": "https://julesferreira.github.io/use-last-call",
  "engines": {
    "node": ">=14.0.0"
  },
  "keywords": [
    "beforeunload",
    "page-visibility",
    "pagehide",
    "react-hooks",
    "typescript",
    "visibilitychange"
  ],
  "files": [
    "dist",
    "src/use[A-Z]*.ts",
    "!src/*.test.ts"
  ],
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "jest": {
    "collectCoverageFrom": [
      "<rootDir>/src/use[A-Z]*.[jt]s?(x)"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@tailwindcss/typography": "^0.5.1",
    "@testing-library/jest-dom": "^5.16.1",
    "@testing-library/react-hooks": "^7.0.2",
    "@types/jest": "^27.0.3",
    "@types/node": "^16.11.14",
    "@types/react": "^17.0.37",
    "@types/react-dom": "^17.0.11",
    "gh-pages": "^3.2.3",
    "jest-mock-extended": "^2.0.4",
    "prettier": "^2.5.1",
    "react-dom": "^17.0.2",
    "react-scripts": "5.0.0",
    "typescript": "^4.5.4",
    "web-vitals": "^2.1.2"
  },
  "peerDependencies": {
    "react": ">=16.8.0"
  }
}
